<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <!--整体框-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_edittext">

        <!--商品图示-->
        <ImageView
            android:id="@+id/img_liulan_shoucang_icon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@color/Black"/>

        <!--商品名称-->
        <TextView
            android:id="@+id/tv_liulan_shoucang_productname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/img_liulan_shoucang_icon"
            android:text="商品名称名称名称"
            android:textColor="@color/Black"
            android:textSize="14sp"/>

        <!--商品价格-->
        <TextView
            android:id="@+id/tv_liulan_shoucang_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_liulan_shoucang_productname"
            android:layout_below="@+id/tv_liulan_shoucang_productname"
            android:text="价格：￥99999"
            android:textColor="@color/rea"
            android:textSize="14sp"/>

        <!--商品优惠程度-->
        <TextView
            android:id="@+id/tv_liulan_shoucang_youhuichengdu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_liulan_shoucang_price"
            android:layout_below="@+id/tv_liulan_shoucang_price"
            android:text="比线下商家已优惠20%"
            android:textColor="@color/rea"
            android:textSize="14sp"/>

        <!--销售量和评论数量-->
        <TextView
            android:id="@+id/tv_liulan_shoucang_num_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_liulan_shoucang_youhuichengdu"
            android:layout_below="@+id/tv_liulan_shoucang_youhuichengdu"
            android:text="99999人已购买\u3000\u300099999条评论"
            android:textColor="@color/Black"
            android:textSize="12sp"/>

        <!--缴入购物车-->
        <TextView
            android:id="@+id/tv_add_to_shopcar"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/img_liulan_shoucang_icon"
            android:layout_alignLeft="@+id/tv_liulan_shoucang_num_s"
            android:background="@drawable/bg_edittext"
            android:drawableLeft="@mipmap/red_cartimg"
            android:gravity="center"
            android:paddingLeft="7dp"
            android:text="@string/add_to_shopcar"
            android:textColor="@color/rea"
            android:textSize="14dp"/>

        <!--点赞数量-->
        <!--<ImageView
            android:id="@+id/img_10"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignBottom="@+id/tv_add_to_shopcar"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/tv_add_to_shopcar"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tv_liulan_shoucang_num_dianzan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_add_to_shopcar"
            android:layout_marginBottom="4dp"
            android:layout_toRightOf="@+id/img_10"
            android:text="99999"
            android:textColor="@color/Black"
            android:textSize="16sp"/>-->

    </RelativeLayout>

</RelativeLayout>