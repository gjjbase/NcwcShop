<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_edittext">

        <!--商品缩略图-->
        <ImageView
            android:id="@+id/img_shiyongjilu_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:src="@mipmap/example"/>

        <!--商品名称-->
        <TextView
            android:id="@+id/tv_shiyongjilu_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_shiyongjilu_icon"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/img_shiyongjilu_icon"
            android:text="S600豪华型安全座椅"
            android:textColor="@color/Black"
            android:textSize="14sp"/>

        <!--开奖日期-->
        <TextView
            android:id="@+id/tv_shiyongjilu_kaijiang_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_shiyongjilu_icon"
            android:layout_alignLeft="@+id/tv_shiyongjilu_product_name"
            android:layout_marginBottom="4dp"
            android:text="开奖日期：2015-10-21"
            android:textColor="@color/button_material_dark"
            android:textSize="12sp"/>

        <!--是否中奖-->
        <TextView
            android:id="@+id/tv_shiyongjilu_status"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:background="@drawable/bg_textview_red"
            android:gravity="center"
            android:text="第1期\n恭喜中奖"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <!--右侧箭头图示-->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:src="@mipmap/arrow"/>

    </RelativeLayout>

</RelativeLayout><!-- From: file:/Users/gaojiangjian/AndroidStudioProjects/NcwcShop/app/src/main/res/layout/item_shiyongjilu.xml -->