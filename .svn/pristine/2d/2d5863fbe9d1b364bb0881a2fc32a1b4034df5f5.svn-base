<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_shopcar_bottom"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec"
    android:orientation="horizontal">

    <!--全选钮-->
    <ImageView
        android:id="@+id/img_shopcar_allchoose"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="7dp"
        android:src="@mipmap/qx_w"/>

    <TextView
        android:id="@+id/tv_allchoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="2dp"
        android:text="@string/allchoose"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textSize="14sp"/>
    <!--免费配送-->
    <TextView
        android:id="@+id/tv_shopcar_sendmsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:text="@string/free_send"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textSize="12sp"/>
    <!--合计-->
    <TextView
        android:id="@+id/tv_shopcar_allpay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="18dp"
        android:text="合计"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textSize="16sp"/>
    <!--提交、加入收藏、删除操作-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="horizontal">

        <!--下单-->
        <TextView
            android:id="@+id/tv_shopcar_commitpay"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="下单"
            android:textColor="@color/abc_primary_text_disable_only_material_dark"
            android:textSize="16sp"/>

        <!--编辑状态下-->
        <!--移入收藏-->
        <TextView
            android:id="@+id/tv_shopcar_addcollect"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/rea"
            android:gravity="center"
            android:text="@string/addcollect"
            android:textSize="14sp"
            android:visibility="gone"/>
        <!--删除-->
        <TextView
            android:id="@+id/tv_shopcar_delete"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/delete"
            android:textColor="@color/rea"
            android:textSize="14sp"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout><!-- From: file:/Users/gaojiangjian/AndroidStudioProjects/NcwcShop/app/src/main/res/layout/item_bottom_settlement.xml -->