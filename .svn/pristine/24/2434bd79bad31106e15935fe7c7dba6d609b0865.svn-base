<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <com.ncwc.shop.widget.CircularImage
            android:id="@+id/img_left"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="center"
            android:src="@mipmap/moren" />

        <TextView
            android:id="@+id/txt_nickname"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/img_left"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="ncwc_56ad"
            android:textColor="@color/img_nickname"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:drawableLeft="@mipmap/clock"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="06 - 10  14:47"
            android:textColor="@color/shadow"
            android:textSize="14sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="如果如如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果如果" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/navpage" />
</LinearLayout>