<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<include
    layout="@layout/common_toolbar"
    />
    <com.ncwc.shop.widget.ScrollViewExtend
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:padding="5dp"
        android:text="@string/itemtitle"
        android:textColor="@color/Black"
        android:textSize="18sp" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="fill_parent"
            android:gravity="center"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:textSize="12sp"
            android:textColor="@color/img_nickname"
            android:text="@string/reptip"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/carapp"
            android:textColor="@color/Black"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/waiguan"
            android:textSize="18sp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:singleLine="true"
                android:background="@mipmap/bg_edittext"
                android:layout_height="45dp"
                android:layout_weight="1"/>
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:scaleType="center"
                android:background="@mipmap/tijioashiyongbaogaozhaopian"
                android:src="@mipmap/zhaoxiangji"
                android:layout_weight="3"/>
        </LinearLayout>
        <com.ncwc.shop.widget.AllGridView
            android:id="@+id/grd_botm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:numColumns="4" />
        <View
            android:background="@color/navpage"
            android:layout_width="fill_parent"
            android:layout_height="1dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/jiage"
            android:text="@string/carpric"
            android:textColor="@color/Black"
            android:textSize="18sp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="fill_parent"
                android:singleLine="true"

                android:padding="5dp"
                android:background="@mipmap/bg_edittext"
                android:layout_height="45dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/chanpinzhiliang"
            android:text="@string/carqua"
            android:textColor="@color/Black"
            android:textSize="18sp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="fill_parent"
                android:padding="5dp"
                android:singleLine="true"
                android:background="@mipmap/bg_edittext"
                android:layout_height="45dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="fill_parent"
                android:textColor="@color/Black"
                android:textSize="18sp"
                android:drawablePadding="10dp"
                android:drawableLeft="@mipmap/pingfen"
                android:layout_height="wrap_content"
                android:text="@string/carcom"
                />
        </LinearLayout>
    </LinearLayout>
    <CheckBox
        android:id="@id/check_xy"
        android:textColor="@color/textBlack"
        style="@style/CustomCheckboxTheme"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:paddingLeft="5dp"
        />
    <TextView
        android:id="@id/regist"
        style="@style/textView_style"
        android:layout_marginTop="15dp"
        android:layout_marginRight="25dp"
        android:textColor="@color/white"
        android:background="@drawable/logintextview_selector"
        android:text="@string/submitrep" />
        </LinearLayout>
    </com.ncwc.shop.widget.ScrollViewExtend>
</LinearLayout>