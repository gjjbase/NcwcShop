<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <!--标题栏-->
    <include
        layout="@layout/common_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>

    <!--我的地址内容-->
    <com.ncwc.shop.widget.PullToLoadView
        android:id="@+id/pullToLoadView_place"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_add_to_myplace"
        android:layout_below="@+id/common_toolbar"/>

    <!--添加地址-->
    <TextView
        android:id="@+id/tv_add_to_myplace"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/circle"
        android:gravity="center"
        android:text="@string/add_place"
        android:textColor="@color/white"
        android:textSize="20sp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="100dp"
        android:src="@mipmap/ic_launcher"/>

</RelativeLayout><!-- From: file:/D:/Studio1.1.0/workspace/NcwcShop/app/src/main/res/layout/activity_myplace.xml -->